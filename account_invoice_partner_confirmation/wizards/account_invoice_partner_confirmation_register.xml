<odoo>

    <record model="ir.ui.view" id="account_invoice_partner_confirmation_register_form_view">
        <field name="name">account.invoice.partner.confirmation.register.form (in account_invoice_partner_confirmation)</field>
        <field name="model">account.invoice.partner.confirmation.register</field>
        <field name="arch" type="xml">
            <form string="Account Invoice Partner Confirmation Register">
                <field name="active_invoices_ids" invisible="1" />
                <field name="batch_register" invisible="1" />
                <group>
                    <group>
                        <field name="confirmation_date" />
                        <field name="state" />
                        <field name="related_file_ids" widget="many2many_binary"/>
                    </group>
                    <group>
                        <field name="vehicle_id"/>
                        <field
                            name="receipt_person"
                            attrs="{'invisible': [('batch_register', '=', True)]}"
                        />
                        <field name="responsible_employee_ids" widget="many2many_tags"/>
                    </group>
                </group>
                <group>
                    <field name="observations" string="Observations"/>
                </group>
                <footer>
                    <button name="register_confirmation"
                            string="Confirm"
                            class="btn-primary"
                            type="object"/>
                    <button string="Cancel"
                            class="btn-default"
                            special="cancel"/>
                </footer>
            </form>
        </field>
    </record>

</odoo>
