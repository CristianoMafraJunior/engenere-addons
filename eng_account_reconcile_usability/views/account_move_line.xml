<?xml version="1.0" encoding="utf-8"?>
<odoo>
  <record id="view_move_line_form" model="ir.ui.view">
    <field name="name">account.move.line</field>
    <field name="model">account.move.line</field>
    <field name="inherit_id" ref="account.view_move_line_form" />
    <field name="arch" type="xml">
      <xpath expr="//field[@name='matched_debit_ids']" position="attributes">
        <attribute name="invisible">0</attribute>
        <attribute name="attrs">{'invisible': [('matched_debit_ids', '=', [])]}</attribute>
      </xpath>
      <xpath expr="//field[@name='matched_credit_ids']" position="attributes">
        <attribute name="invisible">0</attribute>
        <attribute name="attrs">{'invisible': [('matched_credit_ids', '=', [])]}</attribute>
      </xpath>
    </field>
  </record>
</odoo>
